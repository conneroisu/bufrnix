{
  "image": "ghcr.io/xtruder/nix-devcontainer:v1",
  "postCreateCommand": "direnv allow",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.lineNumbers": "relative"
      },
      "extensions": [
        "nicolasdschmidt.lunar-pink",
        "github.copilot",
        "github.copilot-chat",
        "vscodevim.vim",
        "JasonMcGhee.claude-debugs-for-you",
        "jnoortheen.nix-ide",
        "DavidAnson.vscode-markdownlint",
        "VisualStudioExptTeam.vscodeintellicode",
        "christian-kohler.path-intellisense",
        "qwtel.sqlite-viewer",
        "danprince.vsnetrw",
        "eamodio.gitlens",
        "Rubymaniac.vscode-direnv"
      ]
    }
  }
}
